#!/bin/sh
if [ -z "$1" ]; then
    cat 1>&2 <<EOF
usage: $0 email

  If your keys are expired, do:

  gpg --edit-key $id
  > expire ...
  > key 1
  > expire ...
  > save
  > ^d
EOF
   exit 1
fi

set -ex
gpg --quick-gen-key "Lang Martin <$1>" future-default default 3m
gpg --keyserver pgp.mit.edu --send-keys "$1"
