#!/bin/sh
set -ex

cd
dir=langmartin/dot-file
[ -d "$dir" ] || dir=code/dot-file
[ -d "$dir" ] || { echo "$dir doesn't exist" 1>&2; exit 2; }

ln -sn \
   "$dir/.ctags" \
   "$dir/.lein" \
   "$dir/.slate" \
   "$dir/.slate.js" \
   "$dir/.zshenv" \
   "$dir/.zshrc" \
   .

cp \
    "$dir/.offlineimaprc" \
    "$dir/.msmtprc" \
    .

if [ ! -f .emacs ]; then
    cat <<EOF > .emacs
(package-initialize)
(load-file "$dir/.emacs")
(add-to-list 'load-path "$dir/site-lisp")
(let ((default-directory  "$dir/site-lisp"))
  (normal-top-level-add-subdirs-to-load-path))
(add-to-list 'load-path "/usr/local/share/emacs/site-lisp/mu/mu4e")
;; if you've got the elpa version, restart
(rc-init-emacs)
(rc-look-and-feel)
(rc-init-site-lisp)
(rc-emacs-master)

(defun etc-hosts ()
  (interactive)
  (find-file "/sudo:root@localhost:/etc/hosts"))
EOF
fi

if [ ! -f .gitconfig ]; then
    cat <<EOF > .gitconfig
[user]
	name = Lang Martin
	email = lang.martin@gmail.com
[url "git@github.com:"]
	insteadOf = https://github.com/
[include]
	path = $HOME/$dir/.gitconfig
EOF
fi

mkdir -p bin tmp
cd bin
ln -sn \
   ../$dir/bin/brightness \
   ../$dir/bin/volume \
../$dir/bin/git-backup-purge \
    ../$dir/bin/lsof-listen \
    ../$dir/bin/run-offlineimap \
    ../$dir/bin/yta \
    ../$dir/bin/ytv \
    .

cat <<EOF > biff-gmail && chmod +x biff-gmail
#!/bin/sh
# set -a
# MAILUSER=lang.martin@gmail.com
# MAILPASS=<redacted>
# $dir/bin/gmail-biff

set -a
MAILDIR=~/Maildir/gmail
MU_HOME=~/.cache/mu/gmail
$dir/bin/new-email-delivered
EOF
