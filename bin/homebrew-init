#!/bin/sh
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

brew install \
     aspell \
     ctags \
     html2text \
     jq \
     msmtp \
     npm \
     offline-imap \
     pandoc \
     terminal-notifier \
     tmux

brew cask install \
     emacs \
     anybar

EMACS=/usr/local/bin/emacs brew install mu

brew install \
     pinentry-mac \
     gpg2 \
     candid82/brew/joker

brew install \
     djbdns \
     runit \
     graphviz \
     gnuplot \
     unison \
     youtube-dl \
     signify-osx \
     tarsnap \
     magic-wormhole \
     guile \
     ntfs-3g
