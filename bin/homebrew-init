#!/bin/sh
tmp=/tmp/homebrew-init-$$
curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install > $tmp && \
    ruby $tmp

brew install \
     ag \
     aspell \
     ctags \
     html2text \
     go \
     jq \
     msmtp \
     npm \
     offline-imap \
     pandoc \
     planck \
     terminal-notifier \
     tmux

brew cask install \
     emacs \
     anybar

EMACS=/usr/local/bin/emacs brew install mu

brew install \
     pinentry-mac \
     gpg2 \
     candid82/brew/joker
