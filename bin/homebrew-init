#!/bin/sh
path=/opt/homebrew/bin

if [ ! -x $path/brew ]; then
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

brew install \
     aspell \
     html2text \
     jq \
     msmtp \
     npm \
     offlineimap \
     pandoc \
     terminal-notifier \
     tmux \
     djbdns \
     runit \
     graphviz \
     gnuplot \
     unison \
     youtube-dl \
     ntfs-3g

brew install --cask \
     emacs \
     anybar \
     hammerspoon \
     mactex-no-gui

EMACS=$path/emacs brew install mu

# mostly crypto
brew install \
     pinentry-mac \
     gpg2 \
     age \
     signify-osx \
     tarsnap \
     magic-wormhole

# programming
brew install \
     cloc \
     clojure \
     joker \
     jsonlint \
     guile \
     ctags \
     asdf
