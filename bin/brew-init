#!/bin/sh
brew=/opt/homebrew/bin

if [ ! -x $brew/brew ]; then
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

brew install \
     aspell \
     djbdns \
     gnuplot \
     graphviz \
     html2text \
     jq \
     man-db \
     msmtp \
     npm \
     ntfs-3g \
     offlineimap \
     pandoc \
     terminal-notifier \
     tmux \
     unison \
     youtube-dl

brew install --cask hammerspoon

# tectonic is a lazy loading xetex wrapper
brew install tectonic
# brew install --cask mactex-no-gui

# not using this
# brew install --cask anybar

brew tap d12frosted/emacs-plus
brew install emacs-plus@29 --with-poll --with-retro-emacs-logo-icon
cp -r $brew/opt/homebrew/emacs-plus@29/Emacs.app /Applications

EMACS=$brew/emacs brew install mu

# mostly crypto
brew install \
     age \
     gpg2 \
     magic-wormhole \
     pinentry-mac \
     signify-osx \
     tarsnap

# programming
brew install \
     asdf \
     cloc \
     clojure \
     ctags \
     guile \
     joker \
     jsonlint \
     leiningen

# build/update the man index
brew-docs
