[general]
accounts = Gmail

[Account Gmail]
localrepository = Local
remoterepository = Remote
synclabels = yes
labelsheader = X-Keywords

[Repository Local]
type = GmailMaildir
localfolders = ~/Maildir

[Repository Remote]
type = Gmail
# brew install openssl
sslcacertfile = /usr/local/etc/openssl/cert.pem 
remoteuser =
remotepass =
maxconnections = 1
folderfilter = lambda f: f in ['[Gmail]/All Mail']

